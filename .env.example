# Medical Appointment Scheduling Agent - Environment Configuration

# API Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=True

# LLM Configuration
OPENAI_API_KEY=your_api
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_PROVIDER=openai  # Options: openai, anthropic, local
LLM_MODEL=gpt-3.5-turbo  # Options: gpt-3.5-turbo, gpt-4, claude-3-sonnet, etc.

# Calendly API Configuration
CALENDLY_API_TOKEN=your_api
CALENDLY_WEBHOOK_SECRET=your_calendly_webhook_secret_here
CALENDLY_BASE_URL=https://api.calendly.com

# Vector Database Configuration
VECTOR_DB_PROVIDER=chroma  # Options: chroma, pinecone, weaviate, qdrant
CHROMA_DB_PATH=./chroma_db
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=medical_appointments

# Database Configuration (if using persistent storage)
DATABASE_URL=sqlite:///./appointments.db
DATABASE_TYPE=sqlite  # Options: sqlite, postgresql, mysql

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@yourclinic.com
FROM_NAME=Medical Appointment System

# SMS Configuration (for notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
SECRET_KEY=your_secret_key_for_jwt_tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/appointment_system.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "https://yourdomain.com"]

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=True
ENABLE_CALENDAR_INTEGRATION=True
ENABLE_WAITLIST_FEATURE=True
ENABLE_TELEMETRY=False

# Business Configuration
CLINIC_NAME=Healthcare Medical Center
CLINIC_ADDRESS=123 Medical Center Drive, Healthcare City, HC 12345
CLINIC_PHONE=(555) 123-4567
CLINIC_EMAIL=appointments@healthcareclinic.com
CLINIC_WEBSITE=https://healthcareclinic.com

# Appointment Configuration
DEFAULT_APPOINTMENT_DURATION=30
MAX_APPOINTMENTS_PER_DAY=50
BUFFER_TIME_BETWEEN_APPOINTMENTS=15
CANCELLATION_NOTICE_HOURS=24
NO_SHOW_FEE=75.00
CANCELLATION_FEE=50.00

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_BURST=20
ENABLE_RATE_LIMITING=True

# Monitoring and Analytics
ENABLE_MONITORING=True
MONITORING_ENDPOINT=http://localhost:9090
HEALTH_CHECK_ENABLED=True

# Development Settings
RELOAD_ON_CHANGE=True
AUTO_RESTART_WORKERS=True
WORKER_COUNT=2